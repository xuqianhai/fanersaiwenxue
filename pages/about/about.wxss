.page {
    width: 100%;
    height: 100%;
    display: flex;
    text-align: center;
}

.main {
    width: 100%;
    height: 100%;
}

.main .header {
    width: 750rpx;
    height: 350rpx;
    background: linear-gradient(to bottom, rgb(41, 128, 185), rgb(109, 213, 250), rgb(255, 255, 255));
    display: flex;
    justify-content: center;
    align-items: center;
}

.main .header .userinfo {
    width: 85%;
    height: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    border-radius: 20rpx;
    background: linear-gradient(to bottom, #7f7fd5, #86a8e7, #91eae4);
}

.main .header .userinfo .user_header {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 60%;
}

.main .header .userinfo .user_header .user_img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.user_header image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}



.nickname_box {
    color: white;
    text-align: left;
    margin-left: 40rpx;
    width: 50%;
}

.nickname_box .nickname {
    white-space: nowrap;
    overflow: hidden;
    font-size: 40rpx;
}

.nickname_box .welcome {
    font-weight: 300;
}

.line {
    height: 2rpx;
    width: 80%;
    background-color: #778899;
}

.user_place {
    display: flex;
    width: 100%;
    margin: 5rpx;
    justify-content: space-around;
}

.user_place .place {
    margin-top: 10rpx;
    color: white;
    font-size: 30rpx;
    width: 40%;
}

.lists {
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.lists .list {
    width: 100%;
    height: 100rpx;
    display: flex;
    text-align: left;
    border-radius: 20rpx;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.lists .list image {
    width: 10%;
    height: 50rpx;
}

.lists .list .listtitle {
    width: 80%;
    font-size: 35rpx;
    font-weight: 500;
    padding-left: 5%;
}

.lists .list .goimg {
    width: 10%;
}

.list_hover {
    background-color: #e3fdfd;
}

.contact_btn {
    background-color: #FFF;
    padding: 0;
    margin: 0;
    font-size: inherit;
}