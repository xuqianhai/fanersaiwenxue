.body {
    height: 100%;
    min-height: 100vh;
    width: 100%;
    display: flex;
}

.main {
    width: 90%;
    margin: 5%;
    margin-top: 22%;
    margin-bottom: 0;
    height: 100%;
}

.logoBox {
    width: 70%;
    margin-left: 15%;
    margin-bottom: 10px;
}

.transition {
    transition: all 1s ease;
}

.main_res {
    margin-top: -17%;
}

.logo {
    width: 100%;
    height: 100%;
}


.searchBox {
    width: 100%;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: solid 2px #000;
    border-radius: 10px;
    height: 40px;
}

.searchBox .inputBox {
    width: 75%;
    height: 100%;
}

.searchBox .inputBox .input {
    width: 100%;
    height: 100%;
    font-weight: 350;
}

.searchBox .ButtonBox {
    width: 10%;
    height: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.ButtonBox image {
    width: 70%;
    height: 70%;
}

.helpBox {
    margin-top: 10px;
}

.resultBox {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.red {
    color: red;
}

@keyframes fade-in {
    0% {
        opacity: 0;
    }

    /*初始状态 透明度为0*/
    40% {
        opacity: 0.4;
    }

    /*过渡状态 透明度为0*/
    100% {
        opacity: 1;
    }

    /*结束状态 透明度为1*/
}

@keyframes fade-out {
    0% {
        opacity: 1;
    }

    /*初始状态 透明度为0*/
    40% {
        opacity: 0.6;
    }

    /*过渡状态 透明度为0*/
    100% {
        opacity: 0;
    }

    /*结束状态 透明度为1*/
}

.fade_in {
    animation: fade-in;
    animation-duration: 1s;
}

.fade_out {
    animation: fade-out;
    animation-duration: 1s;
}

.resultBox .result {
    width: 100%;
    margin-top: 5px;
    margin-bottom: 5px;
}

.resultBox .result .question {
    margin-top: 5px;
    padding: 10px;
    border-radius: 10px;
    box-shadow: 1px 2px #eeeeee;
    max-height: 3em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.adBox {
    margin-top: 5px;
    width: 100%;
}

.cover {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #eeeeee;
    opacity: 0.9;
}

.cover_child {
    width: 600rpx;
    min-height: 300rpx;
    max-height: 850rpx;
    background: #7a7494;
    padding: 10rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    z-index: 999;
}

.scroll_view {
    color: white;
    width: 100%;
    min-height: 300rpx;
    max-height: 850rpx;
}

.scroll_view .question {
    margin-top: 20rpx;
}